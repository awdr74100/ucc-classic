// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id               Int              @id @default(autoincrement())
  title            String           @db.VarChar(30)
  titleAlternative String?          @map("title_alternative") @db.VarChar(50)
  description      String           @db.VarChar(400)
  posterURLs       String[]         @map("poster_urls")
  trailerURLs      String[]         @map("trailer_urls")
  runningTime      Int              @map("running_time") @db.SmallInt
  releaseDate      DateTime         @map("release_date") @db.Date
  rating           Rating           @relation(fields: [ratingId], references: [id])
  ratingId         Int              @map("rating_id")
  language         Language         @relation(fields: [languageId], references: [id])
  languageId       Int              @map("language_id")
  genres           Movie_Genre[]
  actors           Movie_Actor[]
  directors        Movie_Director[]

  @@map("movie")
}

model Rating {
  id     Int     @id @default(autoincrement())
  name   String  @db.VarChar(10)
  movies Movie[]

  @@map("rating")
}

model Language {
  id     Int     @id @default(autoincrement())
  name   String  @db.VarChar(20)
  movies Movie[]

  @@map("language")
}

model Movie_Genre {
  movie   Movie @relation(fields: [movieId], references: [id])
  movieId Int   @map("movie_id")
  genre   Genre @relation(fields: [genreId], references: [id])
  genreId Int   @map("genre_id")

  @@id([movieId, genreId])
  @@map("movie_genre")
}

model Genre {
  id     Int           @id @default(autoincrement())
  name   String        @db.VarChar(20)
  movies Movie_Genre[]

  @@map("genre")
}

model Movie_Actor {
  movie   Movie @relation(fields: [movieId], references: [id])
  movieId Int   @map("movie_id")
  actor   Actor @relation(fields: [actorId], references: [id])
  actorId Int   @map("actor_id")

  @@id([movieId, actorId])
  @@map("movie_actor")
}

model Actor {
  id              Int           @id @default(autoincrement())
  name            String        @db.VarChar(20)
  nameAlternative String?       @map("name_alternative") @db.VarChar(40)
  movies          Movie_Actor[]

  @@map("actor")
}

model Movie_Director {
  movie      Movie    @relation(fields: [movieID], references: [id])
  movieID    Int      @map("movie_id")
  director   Director @relation(fields: [direcotrId], references: [id])
  direcotrId Int      @map("director_id")

  @@id([movieID, direcotrId])
  @@map("movie_director")
}

model Director {
  id              Int              @id @default(autoincrement())
  name            String           @db.VarChar(20)
  nameAlternative String?          @map("name_alternative") @db.VarChar(40)
  movies          Movie_Director[]

  @@map("director")
}
