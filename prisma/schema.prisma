// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int            @id @default(autoincrement())
  email     String         @unique @db.VarChar(254)
  password  String         @db.Text
  profiles  Profile[]
  roles     RolesOnUsers[]
  createdAt DateTime       @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt DateTime       @updatedAt @map("updated_at") @db.Timestamp(3)

  @@map("user")
}

model Profile {
  id            Int      @id @default(autoincrement())
  user          User     @relation(fields: [userId], references: [id])
  userId        Int      @map("user_id")
  provider      Provider @relation(fields: [providerid], references: [id])
  providerid    Int      @map("provider_id")
  firstName     String   @map("first_name") @db.VarChar(20)
  lastName      String   @map("last_name") @db.VarChar(20)
  sex           Int      @db.SmallInt
  phoneNumber   String   @map("phone_number") @db.VarChar(10)
  pictureURL    String   @map("picture_url") @db.Text
  dateOfBirth   DateTime @map("date_of_birth") @db.Date
  emailVerified Boolean  @map("email_verified")

  @@map("profile")
}

model Provider {
  id       Int       @id @default(autoincrement())
  name     String    @unique @db.VarChar(20)
  profiles Profile[]

  @@map("provider")
}

model Role {
  id    Int            @id @default(autoincrement())
  name  String         @unique @db.VarChar(20)
  users RolesOnUsers[]

  @@map("role")
}

model RolesOnUsers {
  user       User     @relation(fields: [userId], references: [id])
  userId     Int      @map("user_id")
  role       Role     @relation(fields: [roleId], references: [id])
  roleId     Int      @map("role_id")
  assignedAt DateTime @default(now()) @map("assigned_at") @db.Timestamp(3)
  assignedBy String   @map("assigned_by") @db.VarChar(20)

  @@id([userId, roleId])
  @@map("user_role")
}
